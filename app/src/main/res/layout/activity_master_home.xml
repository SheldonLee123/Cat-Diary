<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MasterHome"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/parentlayout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_info"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/info"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/btn_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/settings"
            android:scaleType="centerCrop"
            android:layout_marginLeft="280dp"/>

        <ImageButton
            android:id="@+id/btn_petshop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/petshop"
            android:scaleType="centerCrop"
            android:layout_marginLeft="280dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <ImageButton
            android:id="@+id/btn_care"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/care"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/btn_hospital"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/hospital"
            android:scaleType="centerCrop"
            android:layout_marginLeft="600dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <ImageButton
            android:id="@+id/btn_activity"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/activity"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/btn_beauty"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/beauty"
            android:scaleType="centerCrop"
            android:layout_marginLeft="600dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <ImageButton
            android:id="@+id/btn_nest"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/nest"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/btn_catshop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/catshop"
            android:scaleType="centerCrop"
            android:layout_marginLeft="280dp"/>

        <ImageButton
            android:id="@+id/btn_cutepet"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cutepet"
            android:scaleType="centerCrop"
            android:layout_marginLeft="280dp"/>

    </LinearLayout>

</LinearLayout>